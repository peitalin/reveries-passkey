{
  "name": "@web3authn/passkey",
  "version": "0.1.0",
  "description": "Web3 Authn passkeys built on NEAR protocol",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./react": {
      "import": "./dist/esm/react/index.js",
      "require": "./dist/cjs/react/index.js",
      "types": "./dist/types/react/index.d.ts"
    },
    "./react/styles": "./dist/esm/react/index.css",
    "./worker": "./dist/onetimePasskeySigner.worker.js",
    "./wasm": "./dist/passkey_crypto_worker_bg.wasm",
    "./wasm-js": "./dist/passkey_crypto_worker.js"
  },
  "files": [
    "dist/",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "npm run build:clean && npm run build:wasm && npm run build:ts && npm run build:bundle",
    "build:clean": "rm -rf dist/",
    "build:wasm": "cd src/wasm-worker && wasm-pack build --target web --out-dir . && echo 'WASM build complete'",
    "build:wasm:dev": "cd src/wasm-worker && wasm-pack build --target web --out-dir . --dev",
    "build:ts": "tsc -p tsconfig.build.json",
    "build:bundle": "rollup -c rollup.config.js",
    "build:all": "npm run build && npm run copy-assets",
    "dev": "rollup -c rollup.config.js -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "dev:link": "npm run build:all && pnpm link --dir ../../frontend",
    "dev:unlink": "pnpm unlink --dir ../../frontend",
    "copy-assets": "echo 'Copying worker files to frontend...' && cp dist/onetimePasskeySigner.worker.js ../../frontend/public/workers/ && cp dist/passkey_crypto_worker.js ../../frontend/public/workers/ && cp dist/passkey_crypto_worker_bg.wasm ../../frontend/public/workers/ && echo 'âœ… Worker files copied to frontend/public/workers/'",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "NEAR",
    "passkey",
    "webauthn",
    "authentication",
    "blockchain",
    "react",
    "typescript",
    "sdk"
  ],
  "author": "web3authn.org",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/web3-authn/passkey.git"
  },
  "bugs": {
    "url": "https://github.com/web3-authn/passkey/issues"
  },
  "homepage": "https://github.com/web3-authn/passkey#readme",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "dependencies": {
    "@near-js/client": "^2.0.1",
    "@near-js/crypto": "^2.0.1",
    "@near-js/types": "^2.0.1",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@near-js/providers": "^2.0.1",
    "@near-js/transactions": "^2.0.1",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "animejs": "^4.0.2",
    "borsh": "^2.0.0",
    "bs58": "^6.0.0",
    "buffer": "^6.0.3",
    "eslint": "^8.55.0",
    "idb": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "js-sha256": "^0.11.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^4.9.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-postcss": "^4.0.2",
    "ts-jest": "^29.1.0",
    "typescript": "^5.8.3"
  }
}
